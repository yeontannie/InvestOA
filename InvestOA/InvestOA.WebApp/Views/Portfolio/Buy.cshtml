@model InvestOA.Core.Requests.TransactionRequest

@{
    ViewData["Title"] = "Buy";
}

<form asp-controller="Portfolio" asp-action="Buy" method="post">
    <div class="form-group">
        <input autocomplete="off" asp-for="Symbol" autofocus class="form-control" name="symbol" placeholder="Symbol" type="text">
    </div>
    <div class="form-group">
        <input class="form-control" asp-for="Shares" name="shares" placeholder="Shares" type="number" min="1">
    </div>
    <button class="btn btn-primary" type="submit">Buy</button>
</form>